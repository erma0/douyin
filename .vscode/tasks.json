{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "构建前端",
            "type": "shell",
            "command": "pnpm",
            "args": ["build"],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "group": "build"
            }
        },

        {
            "label": "安装前端依赖",
            "type": "shell",
            "command": "pnpm",
            "args": ["install"],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "group": "setup"
            }
        }
    ]
}
